@{
    ViewData["Title"] = "Device Configuration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="container-fluid">
        <!-- Page Title and Dropdown -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="fw-bold" style="font-size: 2rem; padding-bottom:10px; padding-top:10px">
                Device Configuration
            </h1>
            <select class="form-select" style="width: 250px; border-radius:8px;">
                <option value="0000000002" selected>0000000002</option>
            </select>
        </div>
        <!-- Card Container -->
        <div class="card shadow-sm" style="border-radius: 12px; padding: 0; overflow: hidden;">
            <div class="table-responsive">
                <table class="table align-middle mb-0" style="margin: 0; font-size: 14px;">
                    <thead style="background-color: #f9f9f9; font-weight: bold; text-align: center; line-height: 1.2;">
                        <tr>
                            <th rowspan="2" style="padding: 6px; vertical-align: bottom; text-align: left">Primary Name</th>
                            <th rowspan="2" style="padding: 6px; vertical-align: bottom; text-align: left">Secondary Name</th>
                            <th rowspan="2" style="padding: 6px; vertical-align: bottom; text-align: left">Device Status</th>
                            <th colspan="2" style="padding: 6px; vertical-align: middle;">Input</th>
                            <th colspan="2" style="padding: 6px; vertical-align: middle;">Output</th>
                            <th rowspan="2" style="padding: 6px; vertical-align: bottom; text-align: left;padding-left:20px;">Unlock Timeout</th>
                            <th rowspan="2" style="padding: 6px; vertical-align: bottom;">Edit</th>
                        </tr>
                        <tr>
                            <th style="padding: 6px;">1 Type</th>
                            <th style="padding: 6px;">2 Type</th>
                            <th style="padding: 6px;">1 Type</th>
                            <th style="padding: 6px;">2 Type</th>
                        </tr>
                    </thead>
                    <tbody id="deviceConfigBody" style="text-align: center;"></tbody>
                </table>
            </div>
            <div class="text-center border-top" style="padding-top: 100px;padding-bottom: 30px;">
                <div class="d-flex flex-wrap justify-content-center gap-3">
                    <button class="btn btn-warning text-dark fw-bold"
                            data-bs-toggle="modal" data-bs-target="#createLoginModal">
                        <i class="fa me-1"></i> DOWNLOAD ALARM LOGS
                    </button>
                    <button class="btn btn-warning text-dark fw-bold"
                            data-bs-toggle="modal" data-bs-target="#createLoginModal">
                        <i class="fa me-1"></i> DOWNLOAD EVENT LOGS
                    </button>
                    <button class="btn btn-warning text-dark fw-bold"
                            data-bs-toggle="modal" data-bs-target="#createLoginModal">
                        <i class="fa me-1"></i> DOWNLOAD SENSOR LOGS
                    </button>
                </div>
            </div>

        </div>
    </div>
@section Scripts {
        <script>
            fetch('/data/DeviceConfigurationData.json')
                .then(response => response.json())
                .then(data => {
                    let tbody = document.getElementById("deviceConfigBody");
                    tbody.innerHTML = "";

                    data.forEach(device => {
                        tbody.innerHTML += `
                            <tr>
                                <td style="text-align: left">${device.PrimaryName}</td>
                                <td style="text-align: left">${device.SecondaryName}</td>
                                <td>${device.DeviceStatus}</td>
                                <td>${device.Input1}</td>
                                <td>${device.Input2}</td>
                                <td>${device.Output1}</td>
                                <td>${device.Output2}</td>
                                <td style="text-align: left; padding-left:20px;">${device.UnlockTimeout}</td>
                                <td>
                                    <button class="circular-symbol" title="View Details">
                                        <i class="fas fa-chevron-right"></i>
                                    </button>
                                    <button class="cross-symbol" title="Remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </td>
                            </tr>
                        `;
                    });
                })
                .catch(error => console.error("Error loading JSON:", error));
        </script>
}

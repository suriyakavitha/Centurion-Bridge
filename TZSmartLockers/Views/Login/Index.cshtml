@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Asset Manager |  </title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" />
    <link rel="stylesheet" href="~/css/base.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="login-wrapper">
        <div class="login-box">
            <div class="d-flex align-items-center logo-container">
                <img src="/images/tz-logo.png" alt="TZ Logo" class="logo-img me-3" />
                <div class="logo-text">
                    <h4 class="mb-0 fw-bold">Data</h4>
                    <h4 class="mb-0 fw-bold">Cabinet</h4>
                    <h4 class="mb-0 fw-bold">Security</h4>
                </div>
            </div>
            <h4 class="fw-bold m-b-lg mt-4">Centurion Cloud Bridge</h4>
            <form method="post" asp-controller="Login" asp-action="Login" novalidate>
                <input type="text" name="username" class="form-control" placeholder="Username" value="@ViewBag.Username" />
                <input type="password" name="password" class="form-control" placeholder="Password" />
                <button type="submit" class="btn login-btn mt-2">
                    <i class="fa fa-sign-in-alt"></i> Login
                </button>
                @if (ViewBag.Error != null)
                {
                    <div class="login-error">@ViewBag.Error</div>
                }
            </form>
            <a href="#" class="change-password" text-start w-100>Change Password</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@{
    ViewData["Title"] = "Logins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" >
    <div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 7px;">
        <h1 class="fw-bold page-title mb-0">Users</h1>
        <h3 class="timedate" id="liveDateTime"></h3>
    </div>

    <div class="card shadow-sm" style="border-radius: 12px; background-color:#F2F2F2;">
        <div class="table-responsive">
            <h3 class="card-text" style="padding: 12px 6px; margin: 0;">Logins</h3>
            <table class="table align-middle mb-0" style="font-weight:bold;">
                <thead class="padding-top:None;" style="font-size:16px;">
                    <tr>
                        <th>User Name</th>
                        <th>Something</th>
                        <th>Something</th>
                        <th>Something</th>
                        <th>Permissions</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody id="usersTableBody"></tbody>
            </table>
        </div>

        <div class="text-center py-3" style="border-top: 1px solid #ddd;">
            <button class="btn btn-warning text-dark fw-bold"
                    style="padding: 4px 30px; border-radius: 8px; margin:30px;"
                    data-bs-toggle="modal" data-bs-target="#createLoginModal">
                <i class="fa me-1"></i> Add User
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        fetch('/data/logins.json')
            .then(response => response.json())
            .then(data => {
                let tbody = document.getElementById("usersTableBody");
                tbody.innerHTML = "";

                data.forEach(user => {
                    let permissionsHTML = `
                                <div class="form-check">
                                    <input class="custom-checkbox" type="checkbox" ${user.Permissions["Devices"] ? "checked" : ""}>
                                    <label class="form-check-label">Devices</label>
                                </div>
                                <div class="form-check">
                                    <input class="custom-checkbox" type="checkbox" ${user.Permissions["System"] ? "checked" : ""}>
                                    <label class="form-check-label">System</label>
                                </div>
                                <div class="form-check">
                                    <input class="custom-checkbox" type="checkbox" ${user.Permissions["Alarm Configuration"] ? "checked" : ""}>
                                    <label class="form-check-label">Alarm Configuration</label>
                                </div>
                            `;

                    tbody.innerHTML += `
                               <tr style="margin-top: 30px;">
                                    <td>${user.UserName}</td>
                                    <td>${user.Value1}</td>
                                    <td>${user.Value2}</td>
                                    <td>${user.Value3}</td>
                                    <td class="permissions-cell">${permissionsHTML}</td>
                                    <td>
                                        <button class="circular-symbol" title="View Details" style="color: black">
                                            <i class="fas fa-chevron-right"></i>
                                        </button>
                                        <button class="cross-symbol" title="Remove" style="color: red">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </td>
                                </tr>
                            `;
                });
            })
            .catch(error => console.error("Error loading JSON:", error));

        function updateLiveDateTime() {
            const now = new Date();

            const day = now.getDate().toString().padStart(2, '0');
            const monthNames = [
                "January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"
            ];
            const month = monthNames[now.getMonth()];
            const year = now.getFullYear();

            const hours = now.getHours().toString().padStart(2, '0');
            const minutes = now.getMinutes().toString().padStart(2, '0');
            const seconds = now.getSeconds().toString().padStart(2, '0');

            const formatted = `${day} ${month} ${year} ${hours}:${minutes}:${seconds}`;
            document.getElementById('liveDateTime').innerText = formatted;
        }

        setInterval(updateLiveDateTime, 1000);
        updateLiveDateTime();
    </script>
}

<div class="modal fade" id="createLoginModal" tabindex="-1" aria-labelledby="createLoginLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" style="max-width: 60rem; margin: auto;">
        <div class="modal-content" style="border-radius: 12px;">

            <!-- Header -->
            <div class="modal-header" style="background-color: #ffc107; color: black; border-top-left-radius: 12px; border-top-right-radius: 12px; padding: 12px 20px;">
                <h5 class="modal-title fw-bold" id="createLoginLabel">Create Login</h5>
            </div>

            <!-- Body -->
            <div class="modal-body" style="padding: 20px 30px;">
                <div class="row">
                    <!-- User Information -->
                    <div class="col-md-6 border-end" style="padding-right: 25px;">
                        <h6 class="fw-bold mb-3">User Information</h6>
                        <div class="mb-2 d-flex align-items-center">
                            <label style="width: 200px; font-weight: 500;">Login Name <span style="color: red;">*</span></label>
                            <input type="text" class="form-control form-control-sm">
                        </div>
                        <div class="mb-2 d-flex align-items-center">
                            <label style="width: 200px; font-weight: 500;">Password <span style="color: red;">*</span></label>
                            <input type="password" class="form-control form-control-sm">
                        </div>
                        <div class="mb-2 d-flex align-items-center">
                            <label style="width: 200px; font-weight: 500;">Confirm Password <span style="color: red;">*</span></label>
                            <input type="password" class="form-control form-control-sm">
                        </div>
                        <div class="mb-2 d-flex align-items-center">
                            <label style="width: 200px; font-weight: 500;">Full Name <span style="color: red;">*</span></label>
                            <input type="text" class="form-control form-control-sm">
                        </div>
                    </div>

                    <!-- Permissions -->
                    <div class="col-md-3 border-end" style="padding-left: 20px; padding-right: 20px;">
                        <h6 class="fw-bold mb-3">Permissions</h6>
                        <div class="form-check mb-2 px-0">
                            <input class="custom-checkbox" type="checkbox" id="permDevices">
                            <label class="px-3" for="permDevices">Devices</label>
                        </div>
                        <div class="form-check mb-2 px-0">
                            <input class="custom-checkbox" type="checkbox" id="permSystem">
                            <label class="px-3" for="permSystem">System</label>
                        </div>
                        <div class="form-check mb-2 px-0">
                            <input class="custom-checkbox" type="checkbox" id="permAlarm">
                            <label class ="px-3" for="permAlarm">Alarm Configuration</label>
                        </div>
                    </div>

                    <!-- Associated Devices -->
                    <div class="col-md-3" style="padding-left: 20px;">
                        <h6 class="fw-bold mb-3">Associated Devices</h6>
                        <div class="form-check mb-2 px-0">
                            <input class="custom-checkbox" type="checkbox" id="assocDevices">
                            <label class="px-3" for="assocDevices">Associated Devices</label>
                        </div>
                        <div class="form-check mb-2 px-0">
                            <input class="custom-checkbox" type="checkbox" id="row1Cab1Rear">
                            <label class="px-3" for="row1Cab1Rear">Row1 Cab1 Rear</labe>
                        </div>
                        <div class="form-check mb-2 px-0">
                            <input class="custom-checkbox" type="checkbox" id="row1Cab2Front">
                            <label class="px-3" for="row1Cab2Front">Row1 Cab2 Front</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer justify-content-center" style="gap:20px; border-top:none; padding: 15px;">
                <button type="button" class="btn fw-bold" style="width:150px; background-color: #ffc107; color: black; border: none;" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn fw-bold" style="width:150px; background-color: #ffc107; color: black; border: none;" data-bs-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>


@{
    ViewData["Title"] = "Logins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="fw-bold mb-3" style="font-size: 2rem;">Users</h1>

    <div class="card shadow-sm" style="border-radius: 12px;">
        <div class="table-responsive">
            <h3 class="card-text" style="padding: 12px 10px; margin: 0;">Logins</h3>
            <table class="table align-middle mb-0">
                <thead cclass="padding-top:None;">
                    <tr>
                        <th>User Name</th>
                        <th>Something</th>
                        <th>Something</th>
                        <th>Something</th>
                        <th>Permissions</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody id="usersTableBody"></tbody>
            </table>
        </div>

        <div class="text-center py-3" style="border-top: 1px solid #ddd;">
            <button class="btn btn-warning text-dark fw-bold"
                    style="padding: 8px 20px; border-radius: 8px;"
                    data-bs-toggle="modal" data-bs-target="#createLoginModal">
                <i class="fa me-1"></i> Add User
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        fetch('/data/logins.json')
            .then(response => response.json())
            .then(data => {
                let tbody = document.getElementById("usersTableBody");
                tbody.innerHTML = "";

                data.forEach(user => {
                    let permissionsHTML = `
                        <div class="form-check">
                            <input class="custom-checkbox" type="checkbox" ${user.Permissions["Devices"] ? "checked" : ""}>
                            <label class="form-check-label">Devices</label>
                        </div>
                        <div class="form-check">
                            <input class="custom-checkbox" type="checkbox" ${user.Permissions["System"] ? "checked" : ""}>
                            <label class="form-check-label">System</label>
                        </div>
                        <div class="form-check">
                            <input class="custom-checkbox" type="checkbox" ${user.Permissions["Alarm Configuration"] ? "checked" : ""}>
                            <label class="form-check-label">Alarm Configuration</label>
                        </div>
                    `;

                    tbody.innerHTML += `
                        <tr>
                            <td>${user.UserName}</td>
                            <td>${user.Value1}</td>
                            <td>${user.Value2}</td>
                            <td>${user.Value3}</td>
                            <td class="permissions-cell">${permissionsHTML}</td>
                            <td>
                                <button class="circular-symbol" title="View Details">
                                    <i class="fas fa-chevron-right"></i>
                                </button>
                                <button class="cross-symbol" title="Remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </td>
                        </tr>
                    `;
                });
            })
            .catch(error => console.error("Error loading JSON:", error));
    </script>
}

<div class="modal fade" id="createLoginModal" tabindex="-1" aria-labelledby="createLoginLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 70rem; margin: auto;">
        <div class="modal-content" style="height: 25rem; border-radius:12px">

            <!-- Header with background color -->
            <div class="modal-header" style="background-color: #ffc107; color: white;border-radius:12px">
                <h5 class="modal-title fw-bold text-black" id="createLoginLabel">Create Login</h5>                
            </div>

            <div class="modal-body" style="overflow-y: auto;">
                <div class="row">
                    <!-- Column 1: User Information -->
                    <div class="col-md-6 border-end" style="padding-right: 40px;">
                        <h6 class="fw-bold mb-3">User Information</h6>
                        <div class="mb-2 d-flex align-items-center">
                            <label class="me-2" style="width: 200px;">Login Name</label>
                            <input type="text" class="form-control form-control-sm">
                        </div>
                        <div class="mb-2 d-flex align-items-center">
                            <label class="me-2" style="width: 200px;">Password</label>
                            <input type="password" class="form-control form-control-sm">
                        </div>
                        <div class="mb-2 d-flex align-items-center">
                            <label class="me-2" style="width: 200px;">Confirm Password</label>
                            <input type="password" class="form-control form-control-sm">
                        </div>
                        <div class="mb-2 d-flex align-items-center">
                            <label class="me-2" style="width: 200px;">Full Name</label>
                            <input type="text" class="form-control form-control-sm">
                        </div>
                    </div>

                    <!-- Column 2: Permissions -->
                    <div class="col-md-3 border-end">
                        <h6 class="fw-bold mb-3">Permissions</h6>
                        <div class="form-check mb-2">
                            <input class="custom-checkbox" type="checkbox" id="permDevices">
                            <label class="form-check-label" for="permDevices">Devices</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="custom-checkbox" type="checkbox" id="permSystem">
                            <label class="form-check-label" for="permSystem">System</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="custom-checkbox" type="checkbox" id="permAlarm">
                            <label class="form-check-label" for="permAlarm">Alarm Configuration</label>
                        </div>
                    </div>

                    <!-- Column 3: Associated Devices -->
                    <div class="col-md-3" style="padding-right: 10px;">
                        <h6 class="fw-bold mb-3">Associated Devices</h6>
                        <div class="form-check mb-2">
                            <input class="custom-checkbox" type="checkbox" id="assocDevices">
                            <label class="form-check-label" for="assocDevices">Associated Devices</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="custom-checkbox" type="checkbox" id="row1Cab1Rear">
                            <label class="form-check-label" for="row1Cab1Rear">Row1 Cab1 Rear</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="custom-checkbox" type="checkbox" id="row1Cab2Front">
                            <label class="form-check-label" for="row1Cab2Front">Row1 Cab2 Front</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer justify-content-center">
                <button type="button" class="btn fw-bold px-4" style="background-color: #ffc107; color: black;">Save</button>
                <button type="button" class="btn fw-bold px-4" style="background-color: #ffc107; color: black;" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
